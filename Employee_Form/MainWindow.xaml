<Window x:Class="Employee_Form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UC="clr-namespace:Employee_Form.UserControls"
        xmlns:local="clr-namespace:Employee_Form"
        mc:Ignorable="d"
        Title="MainWindow" Height="810" Width="901" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Label Content="EMPLOYEE FORM" FontSize="50" FontWeight="Bold" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="20"/>

            </Grid.ColumnDefinitions>



            <Grid Grid.Column="1">
                <ScrollViewer>
                    <StackPanel Width="510">
                        <StackPanel>




                            <UC:UserControl1 lblContent="Name :" txtContent="{Binding Name,Mode=TwoWay}" Read="{Binding Readname,Mode=TwoWay}"
                                             EnterKeyCommand="{Binding EntName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  IsFocused="{Binding Focname}"/>

                            <UC:UserControl1 lblContent="Age :" txtContent="{Binding Age,Mode=TwoWay}"  Read="{Binding ReadAge}"
                                             IsFocused="{Binding FocAge}" EnterKeyCommand="{Binding EntAge,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="D.O.B :" HorizontalAlignment="Right" Margin="5" FontSize="25" 
                                           Height="70" Width="160" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" 
                                           VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <DatePicker local:FocusExtension.IsFocused="{Binding DobEnt}"  SelectedDate="{Binding Empdob,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding ReadDob}"
                                                FontSize="20" Height="60" Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Center" 
                                                VerticalContentAlignment="Center"/>
                                </Grid>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Father Name :" IsFocused="{Binding FocFatherName}"  
                                                 txtContent="{Binding Fathername,Mode=TwoWay}" Read="{Binding ReadFatherName}"
                                                 EnterKeyCommand="{Binding EntFatherName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Blood Group :" IsFocused="{Binding FocBloodgrp}" 
                                                 txtContent="{Binding Bloodgrp,Mode=TwoWay}" Read="{Binding ReadBloodgrp}"
                                                 EnterKeyCommand="{Binding EntBloodgrp,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Email ID :" EnterKeyCommand="{Binding EntEmailId,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                                 IsFocused="{Binding FocEmailId}" txtContent="{Binding EmailID,Mode=TwoWay}" Read="{Binding ReadEmailId}"/>
                            </Grid>

                            <Grid >

                                <UC:UC_Address lblContent="Address :" Readonly="{Binding ReadPerAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                               txt_content="{Binding PerAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                               EnterTxt="{Binding EntPerAddress,Mode=TwoWay}"  IsFocusedpr="{Binding FocPerAddress,Mode=TwoWay}"/>
                                
                              
                            </Grid>

                            <Grid>
                                <Label Content="Phone Number" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Personal :" IsFocused="{Binding FocEntPhone}" 
                                                 txtContent="{Binding PerPhone,Mode=TwoWay}" Read="{Binding ReadEntPhone}"
                                                 EnterKeyCommand="{Binding EntPerPhone,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Alternate :" IsFocused="{Binding FocAltPhone}" 
                                                 txtContent="{Binding AltPhone,Mode=TwoWay}" Read="{Binding ReadAltPhone}"
                                                 EnterKeyCommand="{Binding EntAltPhone,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            
                            <Grid>
                                <Label Content="Local Contact Person" FontSize="30" FontWeight="Bold" 
                                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Name:" IsFocused="{Binding FocLocName}"  Read="{Binding ReadLocName}"
                                                 EnterKeyCommand="{Binding EntLocName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 txtContent="{Binding LocName,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Phone :" IsFocused="{Binding FocLocNum}" Read="{Binding ReadLocNum}"
                                                 EnterKeyCommand="{Binding EntLocNum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 txtContent="{Binding LocNum,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <Label Content="Emergency Contact" FontSize="30" FontWeight="Bold"
                                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Phone No :" IsFocused="{Binding FocEmrPhoneNum}"   Read="{Binding ReadEmrPhoneNum}"
                                                 EnterKeyCommand="{Binding EntEmrPhoneNum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 txtContent="{Binding EmrPhoneNum,Mode=TwoWay}"/>
                            </Grid>

                            <Grid >

                                <UC:UC_Address lblContent="Local Address :" 
                                               Readonly="{Binding ReadLocAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                               txt_content="{Binding LocAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  
                                               EnterTxt="{Binding EntLocAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  
                                               IsFocusedpr="{Binding FocLocAddress,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                                
                            </Grid>

                            <Grid>
                                <Label Content="Nominee Details" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Name :" IsFocused="{Binding FocNomName}" Read="{Binding ReadNomName}"
                                                 EnterKeyCommand="{Binding EntNomName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 txtContent="{Binding NomName,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="D.O.B :" HorizontalAlignment="Right" Margin="5" FontSize="25" Height="70" Width="160" 
                                           HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <DatePicker SelectedDate="{Binding NomDob,Mode=TwoWay}" IsEnabled="{Binding ReadNomDob}"
                                                local:FocusExtension.IsFocused="{Binding FocNomDob}" FontSize="20" 
                                                Height="60" Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Center" 
                                                VerticalContentAlignment="Center"/>
                                </Grid>


                            </Grid>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="Relation :" HorizontalAlignment="Right" Margin="5" FontSize="25" 
                                           Height="70" Width="160" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" 
                                           VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <ComboBox Height="60" SelectedItem="{Binding NomRel,Mode=TwoWay}" SelectedValuePath="Content"
                                              local:FocusExtension.IsFocused="{Binding FocNomRel}" SelectedIndex="{Binding Cmbindex,Mode=TwoWay}" FontSize="25" IsEnabled="{Binding ReadNomRel,Mode=TwoWay}"
                                              Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content=""/>
                                        <ComboBoxItem Content="Father"/>
                                        <ComboBoxItem Content="Mother"/>
                                        <ComboBoxItem Content="Husband"/>
                                        <ComboBoxItem Content="Wife"/>
                                        <ComboBoxItem Content="Brother"/>
                                        <ComboBoxItem Content="Sister"/>
                                        <ComboBoxItem Content="Son"/>
                                        <ComboBoxItem Content="Daughter"/>
                                        <ComboBoxItem Content="Gardian"/>
                                    </ComboBox>
                                </Grid>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Phone No:" IsFocused="{Binding FocNomPhoneNum}" Read="{Binding ReadNomPhoneNum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 EnterKeyCommand="{Binding EntNomPhoneNum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 txtContent="{Binding NomPhoneNum,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid >

                                <UC:UC_Address lblContent="Address :" Readonly="{Binding ReadNomAddress,Mode=TwoWay}" txt_content="{Binding NomAddress,Mode=TwoWay}"  EnterTxt="{Binding EnterNomAddress,Mode=TwoWay}"  IsFocusedpr="{Binding FocNomAddress,Mode=TwoWay}"/>
                                
                                
                                


                                
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

            </Grid>



        </Grid>


        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="10">
                    <Button Content="Generate" Height="70" Width="200" FontSize="30" FontWeight="Bold" Background="White" Command="{Binding PrintCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black"  BorderThickness="2"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Button Content="Reset" Height="70" Width="200" FontSize="30" FontWeight="Bold" Background="White" Command="{Binding Reset,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black"  BorderThickness="2"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Button Content="Fetch" Height="70" Width="200" FontSize="30" FontWeight="Bold" Background="White" Command="{Binding Fetch,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black"  BorderThickness="2"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>


</Window>
