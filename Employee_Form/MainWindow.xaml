<Window x:Class="Employee_Form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UC="clr-namespace:Employee_Form.UserControls"
        xmlns:local="clr-namespace:Employee_Form"
        mc:Ignorable="d"
        Title="MainWindow" Height="810" Width="901" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <Label Content="EMPLOYEE FORM" FontSize="50" FontWeight="Bold" FontFamily="Times New Roman" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="20"/>

            </Grid.ColumnDefinitions>



            <Grid Grid.Column="1">
                <ScrollViewer>
                    <StackPanel Width="510">
                        <StackPanel>




                            <UC:UserControl1 lblContent="Name :" txtContent="{Binding Name,Mode=TwoWay}"/>

                            <UC:UserControl1 lblContent="Age :" txtContent="{Binding Age,Mode=TwoWay}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="D.O.B :" HorizontalAlignment="Right" Margin="5" FontSize="25" Height="70" Width="160" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <DatePicker SelectedDate="{Binding Empdob,Mode=TwoWay}" FontSize="20" Height="60" Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                </Grid>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Father Name :" txtContent="{Binding Fathername,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Blood Group :" txtContent="{Binding Bloodgrp,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Email ID :" txtContent="{Binding EmailID,Mode=TwoWay}"/>
                            </Grid>

                            <Grid >

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="2.4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" Height="100" Width="160">
                                    
                                    <StackPanel>
                                        <TextBlock Text="Permanent : Address" FontSize="25" TextWrapping="Wrap" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Column="1"  HorizontalAlignment="Left">
                                    <TextBox  FontSize="20" Height="100" Width="320" Text="{Binding PerAddress,Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"  Margin="7 0 0 0" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" AllowDrop="True"/>


                                </Grid>
                            </Grid>

                            <Grid>
                                <Label Content="Phone Number" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Personal :" txtContent="{Binding PerPhone,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Alternate :" txtContent="{Binding AltPhone,Mode=TwoWay}"/>
                            </Grid>
                            
                            <Grid>
                                <Label Content="Local Contact Person" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Name:" txtContent="{Binding LocName,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Phone :" txtContent="{Binding LocNum,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <Label Content="Emergency Contact" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Phone No :" txtContent="{Binding EmrPhoneNum,Mode=TwoWay}"/>
                            </Grid>

                            <Grid >
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="2.4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" >
                                    <Label Content="Local Address :" HorizontalAlignment="Right"  FontSize="24" Height="100" Width="200" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
                                </Grid>

                                <Grid Grid.Column="1"  HorizontalAlignment="Left">
                                    <TextBox  FontSize="20" Height="100" Text="{Binding LocAddress,Mode=TwoWay}" Width="320" AcceptsReturn="True" TextWrapping="Wrap"  Margin="7 0 0 0" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" AllowDrop="True"/>


                                </Grid>
                            </Grid>

                            <Grid>
                                <Label Content="Nominee Details" FontSize="30" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Name :" txtContent="{Binding NomName,Mode=TwoWay}"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="D.O.B :" HorizontalAlignment="Right" Margin="5" FontSize="25" Height="70" Width="160" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <DatePicker SelectedDate="{Binding NomDob,Mode=TwoWay}" FontSize="20" Height="60" Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                </Grid>


                            </Grid>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Label Content="Relation :" HorizontalAlignment="Right" Margin="5" FontSize="25" Height="70" Width="160" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Grid.Column="1">
                                    <ComboBox Height="60" SelectedItem="{Binding NomRel,Mode=TwoWay}" FontSize="25" Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                        <ComboBoxItem Content="Father"/>
                                        <ComboBoxItem Content="Mother"/>
                                        <ComboBoxItem Content="Brother"/>
                                        <ComboBoxItem Content="Sister"/>
                                        <ComboBoxItem Content="Son"/>
                                        <ComboBoxItem Content="Daughter"/>
                                        <ComboBoxItem Content="Gardian"/>
                                    </ComboBox>
                                </Grid>
                            </Grid>

                            <Grid>
                                <UC:UserControl1 lblContent="Phone No:" txtContent="{Binding NomPhoneNum,Mode=TwoWay}"/>
                            </Grid>

                            <Grid >

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="2.4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0" >
                                    <Label Content="Address :" HorizontalAlignment="Right"  FontSize="24" Height="100" Width="200" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
                                </Grid>

                                <Grid Grid.Column="1"  HorizontalAlignment="Left">
                                    <TextBox  FontSize="20" Height="100" Width="320" Text="{Binding NomAddress,Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"  Margin="7 0 0 0" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" AllowDrop="True"/>


                                </Grid>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

            </Grid>



        </Grid>


        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="10">
                    <Button Content="Generate" Height="70" Width="200" FontSize="30" FontWeight="Bold" Background="White" Command="{Binding PrintCommand,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black"  BorderThickness="2"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Button Content="Reset" Height="70" Width="200" FontSize="30" FontWeight="Bold" Background="White" Command="{Binding Reset,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" BorderBrush="Black"  BorderThickness="2"/>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>


</Window>
