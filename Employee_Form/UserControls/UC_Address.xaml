<UserControl x:Class="Employee_Form.UserControls.UC_Address"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee_Form.UserControls"
             xmlns:con="clr-namespace:Employee_Form"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="100" d:DesignWidth="520">
    <Grid >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2.4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" >
            <Label Content="{Binding lblContent,ElementName=root}" HorizontalAlignment="Right"   FontSize="24" Height="100" Width="200" HorizontalContentAlignment="Right" VerticalContentAlignment="Top"/>
        </Grid>

        <Grid Grid.Column="1"  HorizontalAlignment="Left">
            <TextBox x:Name="InnerTextBox1"  FontSize="20" Height="100" Text="{Binding txt_content,ElementName=root,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" PreviewKeyDown="InputBox_PreviewKeyDown" 
                  con:FocusExtension.IsFocused="{Binding IsFocusedpr,ElementName=root,Mode=TwoWay}" Width="320" Padding="5" IsReadOnly="{Binding Readonly,ElementName=root,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                   TextWrapping="Wrap"  Margin="7 0 0 0" HorizontalContentAlignment="Left" 
                  VerticalContentAlignment="Top" AllowDrop="True" />


        </Grid>
    </Grid>
</UserControl>
