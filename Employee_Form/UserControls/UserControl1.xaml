<UserControl x:Class="Employee_Form.UserControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee_Form.UserControls"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="75" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Label Content="{Binding lblContent,ElementName=root}" HorizontalAlignment="Right" Margin="5" FontSize="25" Height="70" Width="160" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Column="1">
            <TextBox Text="{Binding txtContent,ElementName=root,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Padding="5"  FontSize="20" Height="60" Width="320" Margin="0 8 8 8" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
